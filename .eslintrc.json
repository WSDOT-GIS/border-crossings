{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "ignorePatterns": [
        "docs",
        "**/*.mjs",
        "**/*.d.mts"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "eslint-plugin-tsdoc",
        "@typescript-eslint"
    ],
    "rules": {
        "tsdoc/syntax": "warn"
    }
}